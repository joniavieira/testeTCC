
@model IEnumerable<WebAppAWListaVerificacao.Models.TreeViewModel>
@using System.Web.UI.WebControls
@using WebAppAWListaVerificacao.Models;



<link href="~/Content/jsTree/themes/default/style.min.css" rel="stylesheet" />
<div class="form-body">
    <div id="jstree">

        <h3 class="h3">CRIAR REVISÃO</h3>
        <hr />
        @{
          

            var btns = new LayoutSession();
            btns.SetDocumentoDescarregado();

            Session["BOTOES"] = btns;
        }

        <input type="button" class="btn btn-primary" value="Navegar" onclick="location.href='@Url.Action("Index", "Projeto", new { nivel = 0, guid = "" })'" />
        @(Html.TreeView(Model)
                                                                                                                          .EmptyContent("Disciplinas")
                                                                                                                          .Children(m => m.Childs)
                                                                                                                          .HtmlAttributes(new { id = "tree" })
                                                                                                                      .ChildrenHtmlAttributes(new { @class = "subItem" })
                                                                                                                          .ItemText(m => m.Nome)
                                                                                                                          .ItemTemplate(


                                                                                                        @<text >

                                                                                                        @{
                                                                                                            var nav = (Navegador)Session["Nav"];
                                                                                                            var bt = new LayoutSession();
                                                                                                            if (nav.PlanilhaEscolhida != null)
                                                                                                            {
                                                                                                                
                                                                                                                bt.SetPlanilhaSemDocumentoCarregada();

                                                                                                                Session["BOTOES"] = bt;
                                                                                                            }
                                                                                                        }

                                                                                                        <a href="@Url.Action("Index", "Lista", new { nivel = @item.Nivel, guid = item.ID })">@item.Nome</a>

                                                                                                        </text>)
        )
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/jsTree3/jstree.min.js"></script>
    <script>

        $(function () {
            var selectedData;
            $('#jstree').jstree({
                "core": {
                    "multiple": true,
                    "check_callback": false,
                    'themes': {
                        "responsive": true,
                        'variant': 'larg',
                        'stripes': false,
                        'dots': false
                    }
                },
                "types": {
                    "default": {
                        "icon": "fa fa-folder icon-state-warning icon-lg"
                    },
                    "file": {
                        "icon": "fa fa-file icon-state-warning icon-lg"
                    }
                },
                "plugins": ["dnd", "state", "types", "sort", "checkbox"]
            });
        });
    </script>
}



