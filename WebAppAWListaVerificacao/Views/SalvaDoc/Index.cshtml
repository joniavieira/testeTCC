@model WebAppAWListaVerificacao.Models.DocViewModel
@using WebAppAWListaVerificacao.Models

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<div id="dialog-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">

                <div class="col-md-10"><h4>Salvar Documento</h4></div>
                <div class="col-md-2"><button type="button" class="btn  btn-default" onclick="LimpaDiv()">X</button></div>

            </div>

            <div class="modal-body">

                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">

                        <h4>Salvar documento: @ViewBag.NumeroDocumento ?</h4>

                        <hr />

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="CONFIRMAR" class="btn btn-default" />
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script>
        function LimpaDiv()
        {
            $("#ok").empty();
        }
    </script>
}
