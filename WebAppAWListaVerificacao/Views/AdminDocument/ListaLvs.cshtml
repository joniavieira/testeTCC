@model IEnumerable<WebAppAWListaVerificacao.Models.NumeroSncViewModel>

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<!DOCTYPE html>
<html>
<div id="dialog-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="col-md-3"></div>
        <div class="modal-content col-md-6">
            <div class="modal-header">
                <meta name="viewport" content="width=device-width" />
                <title>ListaLvs</title>
            </div>

            <div class="modal-body">
                @using (Ajax.BeginForm(new AjaxOptions { }))
                {
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NUMERO)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IndiceUltimaRevisao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Confirmacao1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Confirmacao2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Data)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NUMERO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IndiceUltimaRevisao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Confirmacao1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Confirmacao2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                    </td>
                                </tr>
                            }
                    </table>
                }
            </div>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>
</html>