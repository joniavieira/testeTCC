@model IEnumerable<EntidadesRepositoriosLeitura.ListaVerficacaoVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_NO_ACTION.cshtml";
}

<table class="table">
    <tr>
        <th>
            NÚMERO DA LV
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.GUID)
            @Html.HiddenFor(modelItem => item.VERFICADOR_UNICO)
            @Html.DisplayFor(modelItem => item.NUMERODOC)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
