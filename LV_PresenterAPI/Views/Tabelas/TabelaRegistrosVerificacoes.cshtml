
@using LV_PresenterAPI.Models

@{

    var larguraColunaRev = "width:" + ViewBag.LarguraCalculada + "%;text-align:center";

    var listaColunasOrdenada = (List<ConfirmacaoViewModel>)ViewBag.ListaColunasOrdenada;
}


@*LINHA REGISTRO VERIFICACAO*@
<table class="table-bordered" style="width:100%">
    <tr>
        <th style="text-align:center;vertical-align:central;width:100%;height:20px">
            REGISTRO DE VERIFICAÇÃO
        </th>
    </tr>
</table>

@*TABELA REGISTRO VERIFICACAO*@
<table class="table-bordered" style="width:100%">
    <tr>
        <th style="text-align:center;vertical-align:central;width:10%">
            <div style="padding-left:5px">
                Revisão
            </div>
        </th>

        <th style="text-align:center;vertical-align:central;width:90%">
            <table class="table-bordered" style="width:100%">
                <tr>
                    @foreach (var rev in listaColunasOrdenada)
                    {
                        <th style=@larguraColunaRev>
                            @rev.INDICE_REV
                        </th>
                    }
                </tr>
            </table>
        </th>
    </tr>
</table>

<table class="table-bordered" style="width:100%">
    <tr>
        <th style="text-align:center;vertical-align:central;width:10%">
            <div style="padding-left:5px">
                Data
            </div>
        </th>

        <th style="text-align:center;vertical-align:central;width:90%">
            <table class="table-bordered" style="width:100%">
                <tr>
                    @foreach (var rev in listaColunasOrdenada)
                    {
                        <th style=@larguraColunaRev>
                            @rev.DATA
                        </th>
                    }
                </tr>
            </table>
        </th>
    </tr>
</table>

<table class="table-bordered" style="width:100%">
    <tr>
        <th style="text-align:center;vertical-align:central;width:10%">
            <div style="padding-left:5px">
                Nome
            </div>
        </th>

        <th style="text-align:center;vertical-align:central;width:90%">
            <table class="table-bordered" style="width:100%">
                <tr>
                    @foreach (var rev in listaColunasOrdenada)
                    {
                        <th style=@larguraColunaRev>
                            @rev.NOME_USUARIO
                        </th>
                    }
                </tr>
            </table>
        </th>
    </tr>
</table>



<table class="table-bordered" style="width:100%">
    <tr>
        <th style="text-align:center;vertical-align:central;width:10%">
            <div style="padding-left:5px">
                Sigla
            </div>
        </th>

        <th style="text-align:center;vertical-align:central;width:90%">
            <table class="table-bordered" style="width:100%">
                <tr>
                    @foreach (var rev in listaColunasOrdenada)
                    {
                        <th style=@larguraColunaRev>
                            @rev.SIGLA_USUARIO
                        </th>
                    }
                </tr>
            </table>
        </th>
    </tr>
</table>

